<?xml version="1.0" encoding="utf-8"?>

<scene version="0.5.0">
    <integrator type="photonmapper"/>
		<sensor type="perspective">
			<transform name="toWorld">
				<lookAt origin="4, 10, 10" target="0, 0, 0" up="0, 1, 0"/>
			</transform>

			<float name="fov" value="90"/>

			<sampler type="ldsampler">
				<integer name="sampleCount" value="64"/>
			</sampler>

			<film type="ldrfilm">
				<integer name="width" value="512"/>
				<integer name="height" value="512"/>
				<rfilter type="gaussian"/>
			</film>
		</sensor>

	<bsdf type="diffuse" id="light">
        <spectrum name="reflectance" value="400:0.78, 500:0.78, 600:0.78, 700:0.78"/>
    </bsdf>

	<bsdf type="mixturebsdf" id="glass">
		<string name="weights" value="0.7, 0.3"/>
        
		<bsdf type="dielectric"/>
        
		<bsdf type="roughdielectric">
			<float name="alpha" value="0.3"/>
		</bsdf>
	</bsdf>

    <shape type="obj">
        <string name="filename" value="../../Models/myLittleDragon.obj"/>
        <ref id="glass"/>
    </shape>
	
	<shape type="obj">
		<string name="filename" value="../../Models/igs.obj"/>
			<ref id="light"/>

			<emitter type="area">
				<spectrum name="radiance" value="400:0, 500:8, 600:15.6, 700:18.4"/>
			</emitter>
    </shape>
	
</scene>
